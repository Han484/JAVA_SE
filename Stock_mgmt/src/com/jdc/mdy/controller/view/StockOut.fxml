<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" spacing="10.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.mdy.controller.StockOutController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0" />
      <HBox spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="540.0" prefWidth="249.0" spacing="5.0">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Category : " />
                        <ComboBox fx:id="cbo_category" prefWidth="150.0" />
                     </children>
                     <VBox.margin>
                        <Insets left="30.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Item : " />
                        <ComboBox fx:id="cbo_item" prefWidth="150.0" />
                     </children>
                     <VBox.margin>
                        <Insets left="55.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Supplier Name : " />
                        <ComboBox fx:id="cbo_supplier" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefHeight="17.0" prefWidth="59.0" text="Item Qty : " />
                        <TextField fx:id="tf_outQty" prefHeight="27.0" prefWidth="117.0" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_currentQty" prefHeight="27.0" prefWidth="38.0" />
                     </children>
                     <VBox.margin>
                        <Insets left="30.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <CheckBox fx:id="ch_active" mnemonicParsing="false" text="Active" />
                     </children>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="3.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addStock" text="ADD">
                           <styleClass>
                              <String fx:value="button_color" />
                              <String fx:value="button_radius" />
                           </styleClass>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#clearStock" text="Clear">
                           <styleClass>
                              <String fx:value="button_color" />
                              <String fx:value="button_radius" />
                           </styleClass>
                        </Button>
                     </children>
                     <padding>
                        <Insets right="12.0" />
                     </padding>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets top="40.0" />
               </padding>
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="3.0">
                     <children>
                        <Label styleClass="text_field_color" text="StockOut Table">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <TableView fx:id="tv_stock" prefHeight="200.0" prefWidth="200.0" styleClass="text_field_color" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="col_num" prefWidth="48.0" resizable="false" text="No." />
                        <TableColumn prefWidth="150.0" resizable="false" text="Item">
                           <cellValueFactory>
                              <PropertyValueFactory property="name" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="108.0" text="Category">
                           <cellValueFactory>
                              <PropertyValueFactory property="category" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="0.0" prefWidth="67.0" resizable="false" text="Qty">
                           <cellValueFactory>
                              <PropertyValueFactory property="price" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="114.0" resizable="false" text="Supplier">
                           <cellValueFactory>
                              <PropertyValueFactory property="category" />
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
